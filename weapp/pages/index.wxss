  margin-bottom: 50px;
}
.sticky-wrapper{
  width: 100%;
}
.sticky-wrapper image{
  width: 100%;
}
.sec_content_bd{
  padding:20px 0; 
}
.section-content{
  position: relative;
  width: 100%;
  top: 0;
