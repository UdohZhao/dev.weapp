  margin-bottom: 20px;
}
.page__bd_desc{
  font-size: 11px;
  }
.lineHeight{
  line-height: 2;
}
.author{
  text-align: right;
  padding-right: 10px;
}

/* 第三页样式修改  开始  */
.section-content_two{
  min-height: 600px;
}
.scrollImg{
  margin-top: 80px;
  width: 100%;
  text-align: center;
  background-color: #000;
}
.scrollImg_pos{
  position: absolute;
  top:0;
  left: 0;
  z-index: -1;
}

/* 第三页样式修改  结束  */

/* 文字层中的 背景图片 */
.section_body{
  position: absolute;
  z-index: 2;
  width: 100%;
}
.section_img{
  position:absolute;
  top:0;
  left: 0;
  width: 100%;
  z-index: 1;
}

.scrollText{
  padding:15px 0;
  z-index: 2;
  background-color: #000;
}
.scrollback{
  position: absolute;
  z-index: -10;
  bottom: 123px;
  right: 0;
  width: 100%;
}
.scrollback image{
  width: 100%;
}
.section_caption{
  background-color: #000;
  padding:15px 40px;
}
.section_caption_bd{
  font-size: 11px;
}
.scrollText .page__bd {
  padding:10px;
}
.weui-progress__desc{
  color: #fff;
